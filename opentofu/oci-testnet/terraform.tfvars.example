# OCI-only testnet deployment

environment  = "testnet"
project_name = "silica"
validator_count = 4

# IMPORTANT: you must publish a container image somewhere (or use a public one)
# and set it here. This image must contain the `silica` binary and support:
#   - `silica validator ...`
#   - `silica generate-keys --output /out`
# Example (GHCR public package):
# container_image = "ghcr.io/<your-github-user-or-org>/<your-repo>:latest"
container_image = "ghcr.io/your-org-or-user/your-repo:latest"

# If OCI returns "Out of host capacity" for A1.Flex, try the x86 Always Free shape:
# instance_shape = "VM.Standard.E2.1.Micro"
# (Flex-only sizing fields are ignored for fixed shapes)
# instance_ocpus = 1
# instance_memory_in_gbs = 6

# boot_volume_size_in_gbs = 50

# SSH
ssh_public_key_path = "~/.ssh/id_ed25519.pub"

# OCI auth
oci_tenancy_ocid     = "ocid1.tenancy.oc1..your-tenancy-ocid"
oci_user_ocid        = "ocid1.user.oc1..your-user-ocid"
oci_fingerprint      = "aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99"
oci_private_key_path = "~/.oci/oci_api_key.pem"
oci_region           = "us-phoenix-1"

# Where to deploy (use your tenancy OCID for root compartment, or a child compartment OCID)
oci_compartment_ocid = "ocid1.compartment.oc1..your-compartment-ocid"
